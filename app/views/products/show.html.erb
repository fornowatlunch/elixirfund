<% present(@product, ProductPresenter) do |product_presenter| %>
  <div class="row">
    <div class="span12">
      <div class="box">
        <h1><%= @product.title %></h1>
        <%= render 'gallery' %>
      </div>
    </div>
  </div>
    
  <div class="row details">
    <div class="span6">
      <div class="box">
        <h2 class="company"><%= product_presenter.company_link_to %></h2>

        <p><%= @product.description %></p>

        <p>
          <%= link_to t('label.back_to_products'), products_path, :class => "btn btn-info" %>
          <% if user_signed_in? and current_user.patient? %>
            <%= link_to product_presenter.add_to_wishlist, :class => "btn btn-primary" %>
          <% end %>
        </p>

      </div>
    </div><!--span6-->

    <div class="span6">
      <div class="box">
        <h2 class="people">People Who Need This</h2>
        <%= render :partial => 'products/patient', :collection => @patients %>
      </div>
    </div><!--span6-->
  </div>
</div>
<% end %>