<div class="row">
  <div class="span12">
    <div class="box">

      <% present(@product, ProductPresenter) do |product_presenter| %>
        <h2><%= @product.title %> by <%= product_presenter.company %></h2>

        <%= render 'gallery' %>

        <h3><%= @product.title %></h3>
        <p><%= product_presenter.company_link_to %></p>

        <p><%= @product.description %></p>

        <h3>People Who Need <%= @product.title %></h3>
        <%= render :partial => 'products/patient', :collection => @patients %>
      <% end %>
    </div>
  </div>
</div>
