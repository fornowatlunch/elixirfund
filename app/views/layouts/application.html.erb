<!DOCTYPE html>
<html>
<head>
  <title>ElixirFund</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "/css/custom-theme/jquery-ui-1.8.22.custom.css" %>
  <%= javascript_include_tag "/js/jquery-1.7.2.min.js" %>
  <%= javascript_include_tag "/js/jquery-ui-1.8.22.custom.min.js" %>
  <script type="text/javascript">
      $(function(){
        $('.conditional').tabs();
        $( ".button" ).button();
      });
  </script>
  <style>
    body { width:600px; margin:20px auto; font-family: Verdana,Arial,sans-serif; font-size: 1.1em; }
    header, #main-content, footer { margin:20px; padding:20px; background:#ccc; }
    ul { list-style:none; margin:0 0 20px; padding:0; }
  </style>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>Elixir Fund</h1>
    <nav>
      <ul>
        <li class="button"><%= link_to t('home'), root_path %></li>
        <li class="button"><%= link_to t('patients'), patients_path %></li>
        <li class="button"><%= link_to t('products'), products_path %></li>
        <li class="button"><%= link_to t('cart'), cart_path %></li>
      </ul>
    </nav>

    <section>
      <% if user_signed_in? %>
        <%= render 'shared/signed_in' %>
      <% elsif not [new_user_session_path,new_user_registration_path].include?(request.fullpath) %>
        <%= render 'shared/not_signed_in' %>
      <% end %>
    </section>
  </header>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div id="main-content" role="main">
    <%= yield %>
  </div>

  <footer>
    <h3>About Us</h3>
    <p>About us teaser text</p>
    <%= link_to t('read_more'), pages_path('about') %>

    <h3>Success Stories</h3>
    <p>Case study picture grid</p>
    <%= link_to t('view_more'), pages_path('success') %>

    <nav>
      <ul>
        <li><%= link_to t('contact_us'), pages_path('contact') %></li>
        <li><%= link_to t('terms'), pages_path('terms') %></li>
        <li><%= link_to t('privacy_policy'), pages_path('privacy') %></li>
      </ul>
    </nav>
  </footer>
</body>
</html>
