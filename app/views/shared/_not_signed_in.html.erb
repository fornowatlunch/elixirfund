<%= form_for(User.new, :as => :user, :url => session_path(:user)) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  <%= f.submit t('button.user.sign_in') %>
<% end %>
