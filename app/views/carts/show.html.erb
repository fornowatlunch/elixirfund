<div class="box gutter">
  <h2>My Cart</h2>

  <% if @items.size <= 0 %>
    <p class="lead">You don't have any items in your cart!</p>
    <p><%= link_to "Find Patients in Need", patients_path, :class => "btn btn-primary" %></p>
  <% end %>
</div>

<% @items.each do |item| %>
  <div class="media">
    <div class="box">
      <div class="media-object pull-left">
        <% item[1].image %>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= item[1].title %></h4>
        <% if !item[1].price.nil? %>
          <p class="text-success">$<%= item[1].price %></p>
        <% end %>
        <p>
          <%= link_to t('label.view_product'), item[1], :class => "btn btn-info" %>
          <%= link_to "Remove from cart", remove_from_cart_path(patient_id: item[0], product_id: item[1].id), method: :put, :class => "btn btn-danger" %>
        </p>
      </div>
    </div>
  </div>    
<% end %>